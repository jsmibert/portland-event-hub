<h2>All events</h2>

<%= link_to 'New Event', new_admin_event_path, { :class => "btn btn-primary" }%>

<table class="table table-bordered table-striped">
	<tr>
		<th>Id</th>
		<th>Title</th>
		<th>Brief Description</th>
		<th>Image</th>
		<th>&nbsp;</th>
	</tr>
	<% @events.each do |event| %>
	<tr>
		<td><%= event.id %></td>
		<td><%= event.title %></td>
		<td><%= event.brief_description %></td>
		<td><img class="img-responsive" src="<%= event.image_url %>"/></td>
		<td><%= link_to 'Edit', edit_admin_event_path(event.id) %> | <%= link_to 'Delete', admin_event_path(event.id), data: { confirm: 'Are you sure you want to delete this event?' }, :method => :delete %></td>
	</tr>
	<% end %>
</table>
