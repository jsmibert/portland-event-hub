<%= link_to 'All Events', admin_events_path, { :class => "btn btn-default" } %>

<h1>New Event</h1>


<%= form_for :event, :html => {:multipart => true, :class => "form-horizontal" }, url: admin_events_path do |f| %>
 
  <div class="form-group">
    <label for="title" class="col-lg-2 control-label">Title</label>
    <div class="col-lg-4">
      <%= f.text_field :title, { :class => "form-control", :placeholder => "Event Title" } %>
    </div>
  </div>
  <div class="form-group">
    <label for="brief_description" class="col-lg-2 control-label">Brief Description</label>
    <div class="col-lg-4">
      <%= f.text_field :brief_description, { :class => "form-control", :placeholder => "Brief Description" } %>
    </div>
  </div>
  <div class="form-group">
    <label for="start_date" class="col-lg-2 control-label">Start Date</label>
    <div class='input-group date col-lg-2' id='datetimepicker1'>
      <%= f.text_field :start_date, { :class => "form-control", :placeholder => "Start Date" } %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>
  </div>
  <div class="form-group">
    <label for="end_date" class="col-lg-2 control-label">End Date</label>
    <div class='input-group date col-lg-2' id='datetimepicker1'>
      <%= f.text_field :end_date, { :class => "form-control ", :data_format => "yyyy-MM-dd", :placeholder => "End Date" } %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>
  </div>
  <div class="form-group">
    <label for="time_start" class="col-lg-2 control-label">Start Time</label>
    <div class='input-group date col-lg-2' id='datetimepicker4'>
      <%= f.text_field :time_start, { :class => "form-control", :placeholder => "Start Time" } %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
    </div>
  </div>
  <div class="form-group">
    <label for="time_end" class="col-lg-2 control-label">End Time</label>
    <div class='input-group date col-lg-2' id='datetimepicker4'>
      <%= f.text_field :time_end, { :class => "form-control", :data_format => "HH:mm", :placeholder => "End Time" } %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
    </div>
  </div>
  <div class="form-group">
    <label for="address" class="col-lg-2 control-label">Address</label>
    <div class="col-lg-4">
      <%= f.text_field :address, { :class => "form-control", :placeholder => "Address" } %>
    </div>
  </div>
  <div class="form-group">
    <label for="long_description" class="col-lg-2 control-label">Long Description</label>
    <div class="col-lg-4">
      <%= f.text_area :long_description, { :class => "form-control", :placeholder => "Long Description" } %>
    </div>
  </div>
  <div class="form-group">
    <label for="image" class="col-lg-2 control-label">Event Image</label>
    <div class="col-lg-4">
      <%= image_tag(@event.image_url, { :class => 'img-responsive'}) if @event.image? %>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>   
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <button type="submit" class="btn btn-default btn-primary">Create</button>
    </div>
  </div>



  



<% if @event.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@event.errors.count, "error") %> prohibited
      this event from being saved:</h2>
    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>


	
<% end %>