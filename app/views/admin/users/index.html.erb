<div class="row">


  <table class="table table-striped table-responsive">
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>FacebookID</th>
      <th>Role</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.uid %></td>
          <td><%= user.role %></td>
        </tr>
    <% end %>
    </tbody>

  </table>

</div>
