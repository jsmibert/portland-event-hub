<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <ul class="list-group">
        <% @categories.each do |category| %>
            <li class="list-group-item"><%= category.name %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-lg-8">
      <div class="row">
        <% @events.each do |event| %>
            <div class="col-lg-2">
              <h4><%= event.title %></h4>
              <a href="#" class="thumbnail">
                <img data-src="holder.js/100%x180" alt="...">
              </a>
            </div>
        <% end %>

      </div>

    </div>
  </div>
</div>
